<h1>Listing words</h1>

<table class="table table-hover">
  <tr>
    <th>Word fluent</th>
    <th>Fluent language</th>
    <th>Word foreign</th>
    <th>Foreign language</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.word_fluent %></td>
    <td><%= word.fluent_language %></td>
    <td><%= word.word_foreign %></td>
    <td><%= word.foreign_language %></td>
    <td><%= link_to 'Show', word, class: 'btn' %></td>
    <td><%= link_to 'Edit', edit_word_path(word), class: 'btn' %></td>
    <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Word', new_word_path, class: 'btn' %>