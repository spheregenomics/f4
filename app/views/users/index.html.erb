<h1>Listing users</h1>

<table class="table table-hover">
  <tr>
    <th>User name</th>
    <th>Diaspora login</th>
    <th>Shapado login</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.user_name %></td>
    <td><%= user.diaspora_login %></td>
    <td><%= user.shapado_login %></td>
    <td><%= link_to 'Show', user, class: 'btn' %></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: 'btn' %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path, class: 'btn' %>