<h1>Listing tags</h1>

<table class="table table-hover">
  <tr>
    <th width="24%">Tag</th>
    <th width="23%">Tag type</th>
    <th width="23%">Tag system bitmap</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.tag %></td>
    <td><%= tag.tag_type %></td>
    <td><%= tag.tag_system_bitmap %></td>
    <td><%= link_to 'Show', tag, class: 'btn' %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag), class: 'btn' %></td>
    <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Tag', new_tag_path, class: 'btn' %>
