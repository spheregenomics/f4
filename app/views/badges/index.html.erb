<h1>Listing badges</h1>

<table class="table table-hover">
  <tr>
    <th width="70%">Badge name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @badges.each do |badge| %>
  <tr>
    <td><%= badge.badge_name %></td>
    <td><%= link_to 'Show', badge, class: 'btn' %></td>
    <td><%= link_to 'Edit', edit_badge_path(badge), class: 'btn' %></td>
    <td><%= link_to 'Destroy', badge, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Badge', new_badge_path, class: 'btn' %>
